@{
    Layout = null;    
}

<aside class="main-sidebar">
    <!-- Sol Menu -->
    <section class="sidebar">
        <!-- Sol Menu Kullanıcı Paneli -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="/Content/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>@Session["Kullanici"]</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Çevrimiçi</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Arama..." />
                <span class="input-group-btn">
                    <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- Sol Menu Liste -->
        <ul class="sidebar-menu">
            <li class="header">Ana Menü</li>
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="fa fa-dashboard"></i> <span>Kontrol Paneli</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("KullanicilariListele", "Home")">
                    <i class="fa fa-th"></i> <span>Kullanici Yönetim</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("UyeGiris", "Kullanici")">
                    <i class="fa fa-user"></i> <span>Kullanici Girişi</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.Sol Menu -->
</aside>